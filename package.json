{
  "name": "evhelper-monolithic",
  "version": "1.0.0",
  "description": "EV Helper - Monolithic Application",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "server:dev": "cd server && nodemon server.js",
    "client:dev": "cd client/evhelper && vite",
    "build": "cd client/evhelper && npm run build",
    "build:all": "npm run build && npm run setup:server",
    "setup:server": "cd server && npm install",
    "start": "npm run build && NODE_ENV=production node server/server.js",
    "install-deps": "npm install && cd client/evhelper && npm install && cd ../../server && npm install",
    "setup": "npm run install-deps"
  },
  "keywords": ["ev", "charging", "helper", "react", "express", "socket.io"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^9.1.4",
    "socket.io": "^4.8.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "concurrently": "^8.2.2",
    "@tailwindcss/vite": "^4.0.0-alpha.31",
    "tailwindcss": "^4.0.0-alpha.31"
  }
}
